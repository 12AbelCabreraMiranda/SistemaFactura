
@{
    ViewData["Title"] = "CrearFactura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
<style>
    #bordeDatos {
        border-radius: 5px;
        border: 1px solid #757878;
        padding: 20px;
    }
</style>
<h1>Crear Factura Version-2</h1>

<div class="container" id="bordeDatos">

    @*DATOS DEL CLIENTE*@
    <div class="row">
        <div class="col-md-12">
            <div id="DatosCliente">
                <form>
                    <div class="form-row">
                        <div class="col-md-3 mb-3 form-group ">
                            <label class="col-form-label">Nit</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend" style="cursor:pointer" onclick="TextCF()">
                                    <div class="input-group-text"><i class="bi bi-card-checklist"></i></div>
                                </div>
                                <input type="text" class="form-control" id="txtNitCliente" placeholder="Nit">
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="col-form-label">Nombre del Cliente</label>
                            <input type="text" class="form-control" readonly id="txtNombreCliente" placeholder="Nombre del cliente">
                        </div>
                        <div class="col-md-5 mb-3">
                            <label class="col-form-label">Dirección del cliente</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend" style="cursor:pointer" onclick="TextCiudad()">
                                    <div class="input-group-text"><i class="bi bi-search"></i></div>
                                </div>
                                <input type="text" class="form-control" id="txtDireccionCliente" placeholder="Dirección del Cliente">
                            </div>
                        </div>                        

                        <div class="col-md-6 mb-3">
                            <label class="col-form-label">Tipo Documento</label>
                            <select class="form-select form-control" aria-label="Default select example">
                                <option selected>Seleccionar</option>
                                <option value="1">Boleta</option>
                                <option value="2">Cotización</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="col-form-label">Tipo de Pago</label>
                            <select class="form-select form-control" aria-label="Default select example">
                                <option selected>Seleccionar</option>
                                <option value="1">Efectivo</option>
                                <option value="2">Credito</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
    <hr />

    @*DATOS DEL PRODUCTO Y BOTONES*@
    <div class="row">
        <div class="col-md-6">
            @*BARRA DE CODIGO*@
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="bi bi-search"></i></div>
                </div>
                <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Buscar por código de barra">
            </div>
        </div>
        @*BOTONES*@
        <div class="col-md-6">
            <div class="float-right">
                <button class="btn btn-outline-info">
                    <i class="bi bi-search"></i>
                    Buscar producto
                </button>
                <button class="btn btn-outline-dark">
                    <i class="bi bi-card-checklist"></i>
                    Crear Nit
                </button>
                <button class="btn btn-outline-success">
                    <i class="bi bi-printer-fill"></i>
                    Cotización
                </button>
                <button class="btn btn-outline-success">
                    <i class="bi bi-printer"></i>
                    Imprimir
                </button>
            </div>
        </div>
    </div>
</div>
<hr />
@*CONTENEDOR DE DATATABLE*@
<div class="container">
    <div class="col-md-12">
        <h3 class="text-center">PRODUCTOS AGREGADOS</h3>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<script type=”text/javascript” src=”toastr/toastr.js”></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/js/CrearFactura/CrearFactura.js"></script>
